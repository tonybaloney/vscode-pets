{
    "name": "vscode-pets",
    "displayName": "vscode-pets",
    "description": "Pets for your VS Code",
    "version": "1.11.0",
    "engines": {
        "vscode": "^1.68.0"
    },
    "repository": {
        "type": "github",
        "url": "https://github.com/tonybaloney/vscode-pets"
    },
    "publisher": "tonybaloney",
    "categories": [
        "Other"
    ],
    "keywords": [
        "pet",
        "cat",
        "dog",
        "pets",
        "clippy",
        "rubber duck"
    ],
    "license": "MIT",
    "icon": "icon.png",
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "type": "webview",
                    "id": "vscode-pets.petsView",
                    "name": "VS Code Pets",
                    "when": "vscode-pets.position == 'explorer'",
                    "icon": "media/dog.svg"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "vscode-pets.spawn-pet",
                    "when": "view == vscode-pets.petsView",
                    "group": "navigation"
                },
                {
                    "command": "vscode-pets.throw-ball",
                    "when": "view == vscode-pets.petsView",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "vscode-pets.start",
                "title": "Start pet coding session",
                "category": "Pet Coding",
                "icon": "media/dog.svg"
            },
            {
                "command": "vscode-pets.throw-ball",
                "title": "Throw ball",
                "category": "Pet Coding",
                "icon": {
                    "dark": "media/icon/dark-circle-outline.svg",
                    "light": "media/icon/light-circle-outline.svg"
                }
            },
            {
                "command": "vscode-pets.spawn-pet",
                "title": "Spawn additional pet",
                "category": "Pet Coding",
                "icon": {
                    "dark": "media/icon/dark-add.svg",
                    "light": "media/icon/light-add.svg"
                }
            },
            {
                "command": "vscode-pets.delete-pets",
                "title": "Send additional pets to a farm",
                "category": "Pet Coding",
                "when": "focusedView == vscode-pets.petsView && vscode-pets.position == 'explorer'",
                "icon": {
                    "dark": "media/icon/dark-trash.svg",
                    "light": "media/icon/light-trash.svg"
                }
            },
            {
                "command": "vscode-pets.reset-pets",
                "title": "Reset pets",
                "category": "Pet Coding",
                "when": "focusedView == vscode-pets.petsView && vscode-pets.position == 'explorer'",
                "icon": {
                    "dark": "media/icon/dark-trash.svg",
                    "light": "media/icon/light-trash.svg"
                }
            }
        ],
        "configuration": [
            {
                "properties": {
                    "vscode-pets.petColor": {
                        "type": "string",
                        "enum": [
                            "black",
                            "brown",
                            "green",
                            "yellow",
                            "gray",
                            "red",
                            "white"
                        ],
                        "default": "brown",
                        "description": "Pet color",
                        "scope": "window"
                    },
                    "vscode-pets.petType": {
                        "type": "string",
                        "enum": [
                            "cat",
                            "crab",
                            "clippy",
                            "cockatiel",
                            "dog",
                            "rocky",
                            "rubber-duck",
                            "snake",
                            "totoro",
                            "zappy"
                        ],
                        "default": "cat",
                        "description": "Pet type",
                        "scope": "window"
                    },
                    "vscode-pets.petSize": {
                        "type": "string",
                        "enum": [
                            "nano",
                            "medium",
                            "large"
                        ],
                        "default": "nano",
                        "description": "Pet size"
                    },
                    "vscode-pets.position": {
                        "type": "string",
                        "enum": [
                            "panel",
                            "explorer"
                        ],
                        "default": "panel",
                        "description": "VSCode pets webview position"
                    },
                    "vscode-pets.theme": {
                        "type": "string",
                        "enum": [
                            "none",
                            "forest",
                            "castle"
                        ],
                        "default": "none",
                        "description": "Background theme assets for your pets"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile:panel": "webpack",
        "compile:extension": "tsc -p ./tsconfig.extension.json",
        "compile": "npm run compile:panel && npm run compile:extension",
        "watch": "tsc -watch -p ./tsconfig.extension.json",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts && prettier --check src",
        "lint:fix": "eslint src --ext ts --fix && prettier --write src",
        "test": "node ./out/extension/test/runTest.js"
    },
    "devDependencies": {
        "@rbarilani/remove-source-map-url-webpack-plugin": "^1.1.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^9.1.1",
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.68.0",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "eslint": "^8.18.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "prettier": "^2.7.1",
        "ts-loader": "^9.3.0",
        "typescript": "^4.7.4",
        "typescript-eslint": "^0.0.1-alpha.0",
        "vscode-test": "^1.4.0",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0"
    }
}
